# --- app ---
APP_NAME=Delivery Services
APP_VERSION=0.1.0
DEBUG=True
ENVIRONMENT=development

API_V1_STR=/api/v1
PROJECT_NAME=Delivery Services API
DOCS_URL=/docs
REDOC_URL=/redoc

HOST=0.0.0.0
PORT=8000
SECRET_KEY=please-change-me
SESSION_COOKIE_NAME=session_id

# --- postgres ---
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres
# либо задай DSN явно, либо мы его соберём автоматически:
# POSTGRES_DSN=postgresql+asyncpg://postgres:postgres@db:5432/postgres

# --- redis ---
REDIS_URL=redis://redis:6379/0

# --- rabbitmq ---
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/

# --- mongo (опционально для аналитики) ---
MONGODB_URL=mongodb://mongo:27017

# --- rate limit (необязательно) ---
RATE_LIMIT_PER_MINUTE=60

# --- миграции (опционально, если используешь флаг в entrypoint-скриптах) ---
# Для app ставь 1, для worker — 0 (см. docker-compose.yml)
# RUN_DB_MIGRATIONS=1
